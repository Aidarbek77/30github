    <div class="controls">
        <button onclick="scrollLeft()">← Previous</button>
        <button onclick="scrollRight()">Next →</button>
    </div>

    <script>
        function scrollLeft() {
            document.querySelector('.slider-container').scrollBy({
                left: -220,
                behavior: 'smooth'
            });
        }

        function scrollRight() {
            document.querySelector('.slider-container').scrollBy({
                left: 220,
                behavior: 'smooth'
            });
        }
    </script>
