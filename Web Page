    <script>
        function performSearch() {
            let query = document.getElementById('search').value;
            alert('Searching for: ' + query);
        }

        let currentPage = document.querySelector('.page.active');

        function showPage(pageId) {
            let newPage = document.getElementById(pageId);
            if (currentPage === newPage) return;

            let pages = [...document.querySelectorAll('.page')];
            let currentIndex = pages.indexOf(currentPage);
            let newIndex = pages.indexOf(newPage);
            
            let direction = newIndex > currentIndex ? "100%" : "-100%";
            
            currentPage.style.left = direction; // Move old page out
            newPage.style.left = "0"; // Move new page in
            newPage.classList.add('active');
            
            setTimeout(() => {
                currentPage.classList.remove('active');
                currentPage = newPage;
            }, 500);
        }
    </script>
